<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
  </property>

{% if mapred_site_config is defined %}
{% for key,value in mapred_site_config.iteritems() %}
  <property>
    <name>{{ key }}}</name>
    <value>{{ value }}</value>
  </property>
{% endfor %}
{% endif %}

</configuration>